---
import ThemeToggle from "../components/ThemeToggle.astro";

export interface Props {
    title?: string;
    description?: string;
}

const {
    title = "Eric Brookfield - Engineering Director & Product Designer",
    description = "Full-stack software developer and product designer with 15+ years of experience building digital products and leading engineering teams.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content={description} />
        <title>{title}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Crimson+Text:wght@400;600;700&family=Inter:wght@400;500;600&display=swap"
            rel="stylesheet"
        />
        <link
            rel="alternate"
            type="application/rss+xml"
            title="Eric Brookfield - RSS Feed"
            href="/rss.xml"
        />
        <link
            rel="alternate"
            type="application/json"
            title="Eric Brookfield - JSON Feed"
            href="/feed.json"
        />
        <script>
            // Initialize theme immediately to prevent flash
            (function () {
                const theme = localStorage.getItem("theme") || "dark";
                document.documentElement.setAttribute("data-theme", theme);
            })();
        </script>
    </head>
    <body>
        <ThemeToggle />
        <slot />
    </body>
</html>

<style is:global>
    :root {
        --max-width: 1200px;
        --spacing-xs: 0.5rem;
        --spacing-sm: 1rem;
        --spacing-md: 2rem;
        --spacing-lg: 3rem;
        --spacing-xl: 5rem;
    }

    /* Dark theme (default) */
    :root,
    [data-theme="dark"] {
        --color-primary: #5a9fcc;
        --color-primary-light: #7ab4d9;
        --color-primary-lighter: #9ac8e6;
        --color-primary-dark: #4a8bb8;
        --color-text: #e8e8e8;
        --color-text-light: #b0b0b0;
        --color-background: #0a0a0a;
        --color-surface: #1a1a1a;
        --color-border: #2a2a2a;
    }

    /* Light theme */
    [data-theme="light"] {
        --color-primary: #2c5f7c;
        --color-primary-light: #4a7b94;
        --color-primary-lighter: #6a95ad;
        --color-primary-dark: #1a4d6a;
        --color-text: #1a1a1a;
        --color-text-light: #4a4a4a;
        --color-background: #ffffff;
        --color-surface: #f8fafb;
        --color-border: #e1e8ed;
    }

    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    html,
    body {
        margin: 0;
        width: 100%;
        min-height: 100%;
        font-family: "Crimson Text", Georgia, serif;
        color: var(--color-text);
        background-color: var(--color-background);
        line-height: 1.6;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        transition:
            background-color 0.3s ease,
            color 0.3s ease;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-family: "Crimson Text", Georgia, serif;
        line-height: 1.2;
        font-weight: 700;
        letter-spacing: -0.02em;
    }

    h1 {
        font-size: 3rem;
        font-weight: 700;
        letter-spacing: -0.03em;
    }

    h2 {
        font-size: 2.25rem;
        position: relative;
        display: inline-block;
    }

    h2::after {
        content: "";
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 60px;
        height: 3px;
        background: var(--color-primary);
    }

    h3 {
        font-size: 1.5rem;
        font-weight: 600;
    }

    p {
        color: var(--color-text-light);
        line-height: 1.7;
    }

    a {
        color: var(--color-primary);
        text-decoration: none;
        transition: color 0.2s ease;
    }

    a:hover {
        color: var(--color-primary-dark);
    }

    .container {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 var(--spacing-md);
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2rem;
        }

        h2 {
            font-size: 1.5rem;
        }
    }
</style>
