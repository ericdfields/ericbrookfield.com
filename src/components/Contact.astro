---
const contactMethods = [
    {
        label: "Email",
        value: "eric@ericbrookfield.com",
        href: "mailto:eric@ericbrookfield.com",
    },
    {
        label: "LinkedIn",
        value: "linkedin.com/in/ericbrookfield",
        href: "https://linkedin.com/in/ericbrookfield",
    },
    {
        label: "GitHub",
        value: "github.com/ericdfields",
        href: "https://github.com/ericdfields",
    },
];
---

<section class="contact">
    <div class="container">
        <h2>Let's Connect</h2>
        <p class="section-intro">
            I'm always interested in discussing new opportunities, interesting
            projects, or how I can help your team succeed.
        </p>
        <div class="contact-methods">
            {
                contactMethods.map((method) => (
                    <a
                        href={method.href}
                        class="contact-method"
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        <span class="label">{method.label}</span>
                        <span class="value">{method.value}</span>
                    </a>
                ))
            }
        </div>
    </div>
</section>

<style>
    .contact {
        padding: var(--spacing-xl) 0;
        background: var(--color-surface);
        text-align: center;
    }

    .contact h2 {
        margin-bottom: var(--spacing-sm);
        color: var(--color-text);
    }

    .section-intro {
        font-size: 1.125rem;
        margin: 0 auto var(--spacing-lg);
        max-width: 600px;
    }

    .contact-methods {
        display: flex;
        justify-content: center;
        gap: var(--spacing-lg);
        flex-wrap: wrap;
    }

    .contact-method {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: var(--spacing-md);
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        min-width: 200px;
        transition: all 0.3s ease;
    }

    .contact-method:hover {
        transform: translateY(-2px);
        border-color: var(--color-primary-light);
        box-shadow: 0 8px 16px rgba(90, 159, 204, 0.15);
    }

    .contact-method .label {
        font-family: "Inter", sans-serif;
        font-size: 0.875rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--color-primary);
        margin-bottom: var(--spacing-xs);
    }

    .contact-method .value {
        color: var(--color-text-light);
        font-size: 0.95rem;
    }

    @media (max-width: 768px) {
        .contact-methods {
            flex-direction: column;
            align-items: center;
        }

        .contact-method {
            width: 100%;
            max-width: 300px;
        }
    }
</style>
