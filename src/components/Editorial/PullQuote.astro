---
export interface Props {
    quote: string;
    author?: string;
    variant?: 'default' | 'minimal' | 'accent';
    class?: string;
}

const {
    quote,
    author,
    variant = 'default',
    class: className = ''
} = Astro.props;

const variantClass = variant !== 'default' ? variant : '';
---

<blockquote class={`pull-quote ${variantClass} ${className}`}>
    {quote}
    {author && (
        <cite class="quote-author">â€” {author}</cite>
    )}
</blockquote>

<style>
    .quote-author {
        display: block;
        font-size: 0.6em;
        font-style: normal;
        margin-top: 1rem;
        opacity: 0.8;
        font-family: 'Inter', sans-serif;
        font-weight: 500;
    }
</style>
