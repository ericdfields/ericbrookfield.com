---
import { getCollection } from "astro:content";
import "../styles/editorial.css";

const posts = await getCollection("blog");
const sortedPosts = posts
    .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
    .slice(0, 5);
---

<section class="blog-posts">
    <div class="container">
        <span class="chapter-label">Recent Writing</span>
        <h2 class="headline headline-md">Words & Thoughts</h2>
        <p class="section-intro lead-text">
            Thoughts on technology, design, and the craft of building digital
            products.
        </p>
        <div class="posts-list">
            {
                sortedPosts.map((post) => {
                    const date = post.data.date;

                    // Extract the URL path from the original URL or generate from slug
                    const urlPattern = new RegExp(
                        "/(\\d{4})/(\\d{2})/(\\d{2})/([^/]+)\\.html",
                    );
                    const urlMatch = post.data.url.match(urlPattern);
                    const localUrl = urlMatch
                        ? `/${urlMatch[1]}/${urlMatch[2]}/${urlMatch[3]}/${urlMatch[4]}`
                        : `/blog/${post.slug}`;

                    // Get plain text from post body - strip HTML tags
                    const plainText = post.body
                        .replace(/<[^>]*>/g, "")
                        .replace(/\n+/g, " ")
                        .trim();

                    // Use title if available, otherwise use first part of content
                    const displayTitle =
                        post.data.title ||
                        (plainText
                            ? plainText.substring(0, 95) + "..."
                            : "No content available");

                    // Get excerpt from content if title exists
                    const excerpt =
                        post.data.title && plainText
                            ? plainText.substring(0, 200) + "..."
                            : null;

                    return (
                        <article class="post timeline-item">
                            <div class="post-content">
                                <time class="post-date time">
                                    {date
                                        .toLocaleDateString("en-US", {
                                            year: "numeric",
                                            month: "short",
                                            day: "numeric",
                                        })
                                        .toUpperCase()}
                                </time>
                                <div class="post-text">
                                    <h3>
                                        <a href={localUrl}>{displayTitle}</a>
                                    </h3>
                                    {excerpt && (
                                        <p class="post-excerpt">{excerpt}</p>
                                    )}
                                </div>
                            </div>
                        </article>
                    );
                })
            }
        </div>
        <div class="view-all">
            <a href="/archive" class="archive-link"> View Full Archive â†’ </a>
        </div>
    </div>
</section>

<style>
    .blog-posts {
        padding: var(--spacing-xl) 0;
        background: var(--color-background);
    }

    .blog-posts .chapter-label {
        animation: fadeInUp 0.6s ease-out;
    }

    .blog-posts .headline {
        margin-bottom: var(--spacing-sm);
        color: var(--color-text);
        animation: fadeInUp 0.8s ease-out 0.1s backwards;
    }

    .section-intro {
        margin-bottom: var(--spacing-lg);
        max-width: 700px;
        animation: fadeInUp 1s ease-out 0.2s backwards;
        font-family: "Inter", sans-serif;
    }

    .posts-list {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-md);
        margin-bottom: var(--spacing-lg);
    }

    .post {
        padding: 1.5rem 0;
        border-bottom: 1px solid var(--editorial-border, var(--color-border));
        transition: all 0.3s ease;
        animation: fadeInUp 0.8s ease-out;
        animation-delay: calc(0.3s + var(--index, 0) * 0.1s);
        animation-fill-mode: backwards;
    }

    .post:hover {
        padding-left: 1rem;
        background: var(--editorial-surface, var(--color-surface));
        margin-left: -1rem;
        margin-right: -1rem;
        padding-right: 1rem;
    }

    .post:last-of-type {
        border-bottom: none;
    }

    .post-content {
        display: flex;
        gap: 2rem;
        align-items: flex-start;
    }

    .post-date {
        font-family: "Inter", sans-serif;
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--color-primary);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        min-width: 120px;
        padding-top: 0.25rem;
    }

    .post-text {
        flex: 1;
    }

    .post h3 {
        margin-bottom: var(--spacing-xs);
        font-family: "Playfair Display", "Crimson Text", serif;
        font-size: 1.875rem;
        font-weight: 700;
        line-height: 1.2;
    }

    .post h3 a {
        color: var(--color-text);
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .post h3 a:hover {
        color: var(--color-primary);
    }

    .post-excerpt {
        font-family: "Inter", sans-serif;
        font-size: 1rem;
        line-height: 1.7;
        margin-top: var(--spacing-xs);
        color: var(--editorial-gray, var(--color-text-light));
        font-weight: 300;
    }

    .view-all {
        text-align: center;
        padding-top: var(--spacing-md);
    }

    .archive-link {
        font-family: "Inter", sans-serif;
        font-size: 1.1rem;
        font-weight: 500;
        color: var(--color-primary);
        text-decoration: none;
        transition: all 0.2s ease;
        display: inline-block;
        position: relative;
    }

    .archive-link:hover {
        color: var(--color-primary-dark);
        transform: translateX(4px);
    }

    .archive-link::after {
        content: "";
        position: absolute;
        bottom: -2px;
        left: 0;
        right: 0;
        height: 2px;
        background: var(--color-primary);
        transform: scaleX(0);
        transition: transform 0.3s ease;
    }

    .archive-link:hover::after {
        transform: scaleX(1);
    }

    @media (max-width: 768px) {
        .post-content {
            flex-direction: column;
            gap: 0.5rem;
        }

        .post-date {
            min-width: auto;
        }

        .post h3 {
            font-size: 1.5rem;
        }

        .post:hover {
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }
    }
</style>
