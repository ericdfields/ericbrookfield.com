---
export interface Props {
    name: string;
    title: string;
    location: string;
    imageUrl?: string;
}

const { name, title, location, imageUrl = "/headshot.jpeg" } = Astro.props;
---

<section class="hero">
    <div class="container">
        <div class="hero-content">
            <div class="hero-text">
                <h1>{name}</h1>
                <p class="title">{title}</p>
                <p class="location">{location}</p>
                <p class="bio">
                    I excel at building digital products and leading teams
                    through the software development lifecycle. With over 15
                    years in the industry, I bring a unique combination of
                    technical expertise and design sensibility to create
                    meaningful digital experiences.
                </p>
            </div>
            <div class="hero-image">
                <img src={imageUrl} alt={`${name} headshot`} />
            </div>
        </div>
    </div>
</section>

<style>
    .hero {
        padding: var(--spacing-xl) 0;
        background: linear-gradient(
            135deg,
            var(--color-surface) 0%,
            var(--color-background) 100%
        );
    }

    .hero-content {
        display: grid;
        grid-template-columns: 1fr auto;
        gap: var(--spacing-xl);
        align-items: center;
    }

    .hero-text h1 {
        margin-bottom: var(--spacing-xs);
        color: var(--color-text);
        font-size: 3.5rem;
        letter-spacing: -0.04em;
        font-weight: 700;
    }

    .title {
        font-size: 1.35rem;
        font-weight: 400;
        color: var(--color-primary);
        margin-bottom: var(--spacing-xs);
        font-style: italic;
        letter-spacing: 0.01em;
    }

    .location {
        font-size: 1rem;
        color: var(--color-text-light);
        margin-bottom: var(--spacing-md);
    }

    .bio {
        font-size: 1.1rem;
        line-height: 1.8;
        max-width: 600px;
    }

    .hero-image {
        width: 280px;
        height: 280px;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(90, 159, 204, 0.2);
        border: 4px solid var(--color-surface);
    }

    .hero-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    @media (max-width: 768px) {
        .hero-content {
            grid-template-columns: 1fr;
            text-align: center;
        }

        .hero-image {
            width: 200px;
            height: 200px;
            margin: 0 auto;
            order: -1;
        }

        .bio {
            margin: 0 auto;
        }
    }
</style>
