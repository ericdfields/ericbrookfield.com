---
import "../styles/editorial.css";

export interface Props {
    name: string;
    title: string;
    location: string;
    imageUrl?: string;
}

const { name, title, location, imageUrl = "/headshot.jpeg" } = Astro.props;
---

<section class="hero">
    <div class="container">
        <div class="hero-content">
            <div class="hero-text">
                <span class="chapter-label">Portfolio & Works</span>
                <h1 class="headline headline-lg">{name}</h1>
                <div class="byline">
                    <span class="title">{title}</span>
                    <span class="separator">â€¢</span>
                    <span class="location">{location}</span>
                </div>
                <p class="bio lead-text">
                    <span class="drop-cap-inline">I</span> excel at building digital
                    products and leading teams through the software development lifecycle.
                    With over 15 years in the industry, I bring a unique combination
                    of technical expertise and design sensibility to create meaningful
                    digital experiences.
                </p>
            </div>
            <div class="hero-image">
                <img src={imageUrl} alt={`${name} headshot`} />
            </div>
        </div>
    </div>
</section>

<style>
    .hero {
        padding: var(--spacing-xl) 0;
        background: linear-gradient(
            135deg,
            color-mix(
                    in srgb,
                    var(--color-background) 95%,
                    var(--color-primary) 5%
                )
                0%,
            var(--color-background) 50%,
            color-mix(
                    in srgb,
                    var(--color-background) 98%,
                    var(--color-accent) 2%
                )
                100%
        );
    }

    .hero-content {
        display: grid;
        grid-template-columns: 1fr auto;
        gap: var(--spacing-xl);
        align-items: center;
    }

    .hero-text .headline {
        margin-bottom: var(--spacing-sm);
        color: var(--color-text);
    }

    .hero-text .chapter-label {
        animation: fadeInUp 0.6s ease-out;
    }

    .hero-text .headline {
        animation: fadeInUp 0.8s ease-out 0.1s backwards;
    }

    .hero-text .byline {
        animation: fadeInUp 1s ease-out 0.2s backwards;
        margin-bottom: var(--spacing-md);
    }

    .title {
        font-size: 1.2rem;
        font-weight: 500;
        color: var(--color-primary);
        font-family: "Inter", sans-serif;
    }

    .location {
        font-size: 1.1rem;
        color: var(--color-text-light);
    }

    .bio {
        max-width: 600px;
        animation: fadeInUp 1.2s ease-out 0.3s backwards;
    }

    .drop-cap-inline {
        font-family: "Playfair Display", serif;
        font-size: 2.5em;
        font-weight: 900;
        float: left;
        line-height: 0.8;
        margin: 8px 8px 0 0;
        color: var(--color-primary);
    }

    .hero-image {
        width: 280px;
        height: 280px;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        border: 4px solid var(--color-surface);
    }

    .hero-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    @media (max-width: 768px) {
        .hero-content {
            grid-template-columns: 1fr;
            text-align: center;
        }

        .hero-image {
            width: 200px;
            height: 200px;
            margin: 0 auto;
            order: -1;
        }

        .bio {
            margin: 0 auto;
        }
    }
</style>
